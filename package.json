{
  "name": "nebula",
  "version": "1.0.0",
  "description": "A parcel boilerplate",
  "main": "src/js/main.js",
  "repository": "git@github.com:r-valchev/template-parcel.git",
  "author": "Radoslav Valchev <radoslav.valchev.web@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "yarn eslint && yarn serve",
    "serve": "parcel serve src/pages/*.html --open",
    "build": "parcel build src/pages/*.html -d build --public-url ./",
    "eslint": "esw 'src/assets/js/*'",
    "fix": "esw --fix --watch 'src/assets/js/*'"
  },
  "devDependencies": {
    "eslint": "^7.4.0",
    "eslint-watch": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "posthtml-include": "^1.4.3",
    "sass": "^1.26.9"
  },
  "keywords": [
    "parcel",
    "boilerplate",
    "template"
  ],
  "bugs": "https://github.com/r-valchev/template-parcel/issues",
  "private": true,
  "dependencies": {},
  "eslintConfig": {
    "extends": [
      "parcel"
    ],
    "rules": {
      "no-console": "warn"
    }
  }
}
